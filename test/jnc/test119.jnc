event g_event ();

C* g_c;

class C
{
	int m_x;

	construct ()
	{
		printf ("C.construct: this: %p\n", this);
		g_c = this;
	}

	reactor m_reactor;

	int foo ()
	{
		printf ("C.foo: this: %p\n", this);
		assert (this == g_c);
		return 0;
	}
}

reactor C.m_reactor
{
	m_x = foo ();

	onevent g_event ()
	{
		printf ("C.m_reactor.onevent: this: %p\n", this);
		assert (this == g_c);
	}
}

int main ()
{
	C c;
	c.m_reactor.start ();
	g_event ();

	return 0;
}
