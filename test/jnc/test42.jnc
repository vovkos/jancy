class C1
{
	protected int m_x = 10;

	void foo()
	{
		printf("C1.foo () { m_x = %d }\n", m_x);
	}
}

extension C1Ext: C1
{
	void bar()
	{
		printf("C1Ext.bar () { m_x = %d }\n", m_x);
	}

	int property m_prop;

	int m_prop.get()
	{
		printf("C1Ext.m_prop.get () { m_x = %d }\n", m_x);
		return m_x;
	}

	void m_prop.set(int x)
	{
		printf("C1Ext.set (%d) { m_x = %d }\n", x, m_x);
		m_x = x;
	}

}

using extension C1Ext;

int main()
{
	printf("main\n");

	C1 c;
	c.foo();
	c.bar();
	c.m_prop = 100;

	return 0;
}

