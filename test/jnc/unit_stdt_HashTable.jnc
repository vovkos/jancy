void test_empty() {
	HashTable<int, int, HashId<int> > ht;

	assert(ht.m_count == 0);
	assert(!ht.find(1));
}

void test_add_and_find() {
	HashTable<int, int, HashId<int> > ht;

	ht.add(1, 10);
	ht.add(2, 20);

	assert(ht.m_count == 2);

	HashTableIterator<int, int> it1 = ht.find(1);
	HashTableIterator<int, int> it2 = ht.find(2);

	assert(it1);
	assert(it2);
	assert(it1->m_value == 10);
	assert(it2->m_value == 20);
}

void test_add_overwrite() {
	HashTable<int, int, HashId<int> > ht;

	ht.add(1, 10);
	ht.add(1, 42);

	assert(ht.m_count == 1);

	HashTableIterator<int, int> it = ht.find(1);
	assert(it);
	assert(it->m_value == 42);
}

void test_add_if_not_exists() {
	HashTable<int, int, HashId<int> > ht;

	HashTableIterator<int, int> it1 = ht.addIfNotExists(1, 10);
	assert(it1);
	assert(ht.m_count == 1);

	HashTableIterator<int, int> it2 = ht.addIfNotExists(1, 20);
	assert(!it2);
	assert(ht.m_count == 1);

	HashTableIterator<int, int> it = ht.find(1);
	assert(it);
	assert(it->m_value == 10);
}

void test_remove_key() {
	HashTable<int, int, HashId<int> > ht;

	ht.add(1, 10);
	ht.add(2, 20);

	assert(ht.removeKey(1));
	assert(ht.m_count == 1);
	assert(!ht.find(1));
	assert(ht.find(2));

	assert(!ht.removeKey(3));
}

void test_iteration_order() {
	HashTable<int, int, HashId<int> > ht;

	ht.add(1, 10);
	ht.add(2, 20);
	ht.add(3, 30);

	int sum = 0;

	for (HashTableIterator<int, int> it = ht.m_head; it; it++)
		sum += it->m_value;

	assert(sum == 60);
}

void test_resize() {
	HashTable<int, int, HashId<int> > ht;

	for (int i = 0; i < 200; i++)
		ht.add(i, i * 2);

	assert(ht.m_count == 200);

	for (int i = 0; i < 200; i++) {
		HashTableIterator<int, int> it = ht.find(i);
		assert(it);
		assert(it->m_value == i * 2);
	}
}

void test_clear() {
	HashTable<int, int, HashId<int> > ht;

	ht.add(1, 10);
	ht.add(2, 20);

	assert(ht.m_count == 2);

	ht.clear();

	assert(ht.m_count == 0);
	assert(!ht.find(1));
	assert(!ht.find(2));
