struct A
{
	int m_a;
	int m_b;
}

struct B: A
{
	int m_x;
	int m_y;
	void* m_p;
}

foo (void const* p)
{
	B const* b = dynamic (B const*) p;
	if (!b)
	{
		printf ("p is NOT B\n");
		return;
	}

	size_t size = dynamic sizeof (b);
	size_t count = dynamic countof (b);

	printf ("p is B: sizeof = %d, countof = %d\n", size, count);
}

int main ()
{
	printf ("main\n");

	A a;
	B b [5];

	foo (a);
	foo (&b [3]);

	return 0; 
}

