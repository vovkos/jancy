struct Foo
{
	char const* m_name;
	char const* m_description;
}

// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

bar (
	char const* a,
	char const* b
	)
{
	printf ("a = %s; b = %s\n", a, b);
}

baz ()
{
	Foo* foo = new Foo;
	foo.m_name = "name";
	foo.m_description = "description";

	bool b = true;

	bar (
		b ? foo.m_name : foo.m_description,
		b ? foo.m_description : foo.m_name
		);
}

//..............................................................................

// entry point

int main ()
{
	printf ("main ()\n");

	baz ();

	return 0;
}

