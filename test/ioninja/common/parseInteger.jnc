long parseInteger(string_t string) {

	int radix =
		string.m_length >= 2 && string[0] == '0' ?
		string.m_length >= 3 && (string[1] == 'x' || string[1] == 'X') ?
		16 : 8 : 10;

	return strtol(string, null, radix);
}

