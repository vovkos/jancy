// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

struct OsdpCmdReply
{
	[ displayName = "Command/Reply Code" ]
	OsdpCmdReplyCode m_code;
}

// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

struct OsdpCrc
{
	[
		displayName = "CRC",
		formatSpec  = "0x%04X"
	]
	uint16_t m_crc;
}

