//..............................................................................
//
// OSDP definitions
//

//..............................................................................

enum OsdpChar: char
{
	Som = 0x53,
}

// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

bitflag enum OsdpCtrl: uint8_t
{
	Crc,
	Scb,
	Multi = 0x20, // 0x80 >> 2
}

// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

enum OsdpDirection: uint8_t
{
	Command,
	Response,
}

// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

alignment(1);

struct OsdpHdr
{
	[ displayName = "SOM" ]
	OsdpChar m_som;

	[ displayName = "Address" ]
	uchar_t m_address   : 7;

	[
		displayName = "Direction",
		displayType = typeof(OsdpDirection)
	]
	uchar_t m_direction : 1;

	[ displayName = "Length" ]
	uint16_t m_length;

	[ displayName = "Sequence" ]
	uchar_t m_sqn  : 2;

	[
		displayName = "Control",
		displayType = typeof(OsdpCtrl)
	]
	uchar_t m_ctrl : 6;
}

// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

struct OsdpScbHdr
{
	uchar_t m_length;
	uchar_t m_type;
}

// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

