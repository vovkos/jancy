log-guid    = 5144b05f-e687-45ca-81bb-6c5f7880a2f3  # modbus
icon        = images/modbus.png
small-icon  = images/modbus-16x16.png

layer-class       = ModbusLayer
dispatch-class    = ModbusDispatch
