	TxMasterRxSlave,
	RxMasterTxSlave,
	TxHalfDuplex,
	RxHalfDuplex,
}

// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

enum ModbusHalfDuplexMode {
	Alternate,
	RtsMaster,
	RtsSlave,
	CtsMaster,
	CtsSlave,
}

