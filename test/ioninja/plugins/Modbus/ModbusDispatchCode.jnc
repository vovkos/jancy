enum ModbusDispatchCode {
	GetProtocol,
	SetProtocol,
	GetStreamRoles,
	SetStreamRoles,
	GetHalfDuplexMode,
	SetHalfDuplexMode,
	GetHalfDuplexTimeout,
	SetHalfDuplexTimeout,
}

