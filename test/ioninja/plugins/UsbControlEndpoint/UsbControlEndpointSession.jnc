		{ "Endpoint",  0x02 },
		{ "Other",     0x03 },
	}

	static ui.EnumPropertyOption reqIdTable[] = {
		{ "Get Status",        "0x00" },
		{ "Clear Feature",     "0x01" },
		{ "Set Feature",       "0x03" },
		{ "Set Address",       "0x05" },
		{ "Get Descriptor",    "0x06" },
		{ "Set Descriptor",    "0x07" },
		{ "Get Configuration", "0x08" },
