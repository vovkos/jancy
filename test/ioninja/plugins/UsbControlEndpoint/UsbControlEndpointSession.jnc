		{ "Class",    0x01 << 5 },
		{ "Vendor",   0x02 << 5 },
		{ "Reserved", 0x03 << 5 },
	}

	static ui.EnumPropertyOption reqRecipientTable[] = {
		{ "Device",    0x00 },
