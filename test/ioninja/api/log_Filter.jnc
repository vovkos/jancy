namespace log {

//! \addtogroup api-log
//! @{

//..............................................................................

class Filter
{
	abstract bool filter(
		uint64_t timestamp,
		uint64_t recordCode,
		void const* p,
		size_t size
		);

	virtual void reset()
	{
	}
}

//..............................................................................

class FoldingFilter
{
	abstract uint8_t filter(
		uint64_t timestamp,
		uint64_t recordCode,
		void const* p,
		size_t size
		);

	virtual void reset()
	{
	}
}

//..............................................................................

//! @}

} // namespace log
