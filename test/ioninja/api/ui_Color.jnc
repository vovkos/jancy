namespace ui {

//! \addtogroup api-ui
//! @{

//..............................................................................

bitflag enum ColorFlags {
	Undefined = 0x80000000,
	Index     = 0x40000000,
	IndexMask = 0x0fffffff,
	RgbMask   = 0x00ffffff,
}

// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

enum StdColor {
	Black           = ColorFlags.Index | 0,
	Red,            // 1
	Green,          // 2
	Yellow,         // 3
	Blue,           // 4
	Magenta,        // 5
	Cyan,           // 6
	White,          // 7

	BrightBlack,    // 8
	BrightRed,      // 9
	BrightGreen,    // 10
	BrightYellow,   // 11
	BrightBlue,     // 12
	BrightMagenta,  // 13
	BrightCyan,     // 14
	BrightWhite,    // 15

	PastelGray,     // 16
	PastelRed,      // 17
	PastelGreen,    // 18
	PastelOrange,   // 19
	PastelBlue,     // 20
	PastelPurple,   // 21
	PastelCyan,     // 22
	PastelYellow,   // 23

	WidgetText,     // 24
	WidgetBack,     // 25
	DisabledText,   // 26
	DisabledBack,   // 27
	SelectionText,  // 28
	SelectionBack,  // 29
}

// . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

uint_t rgb(
	uint8_t r,
	uint8_t g,
	uint8_t b
) {
	return (r << 16) + (g << 8) + b;
}

//..............................................................................

//! @}

} // namespace ui
