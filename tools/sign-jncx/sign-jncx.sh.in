#!/bin/bash

set -e

#...............................................................................

if [ "$1" == "" ]; then
	echo "sign-jncx - Jancy extension sign utility"
	echo "Usage:"
	echo "    sign-jncx <file.jncx>"
	echo "Current configuation:"
	echo "    Path to 7z:            ${7Z_EXE}"
	echo "    Path to elfsign:       ${ELFSIGN_EXE}"
	echo "    Path to elfsign key:   ${ELFSIGN_PRIVATE_KEY_PEM}"
	echo "    ELF signature section: ${ELFSIGN_SECTION}"
	exit -1
fi

#...............................................................................

JNCX=$(realpath $1)
OS=$(uname -s)

if [ $OS == "Darwin" ]; then
	IDENTITIY=$2
	IS_SIDEBYSIDE=$3
fi

#. . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . . .

EXTRACT_DIR=$(mktemp -d -t jncx-XXXXXX)
pushd $EXTRACT_DIR

${7Z_EXE} e "$JNCX"

BIN_FOUND=

for BIN in *.bin; do
	[ -f "$BIN" ] || continue
	BIN_FOUND=1

	if [ $OS == "Linux" ]; then
		${ELFSIGN_EXE} \
			--sign \
			--key ${ELFSIGN_PRIVATE_KEY_PEM} \
			--section ${ELFSIGN_SECTION} \
			$BIN
	elif [ $OS == "Darwin" ]; then
		chmod -x $BIN
		codesign \
			--force \
			--timestamp \
			--options runtime \
			--sign "$IDENTITIY" \
			$BIN

		if [ "$IS_SIDEBYSIDE" != "" ]; then
			JNCX_DIR=$(dirname "$JNCX")
			mv $BIN "$JNCX_DIR"
		fi
	fi
done

if [ "$BIN_FOUND" != "" ]; then
	rm "$JNCX"
	${7Z_EXE} a -tzip -y "$JNCX"
fi

popd
rm -rf $EXTRACT_DIR

#...............................................................................
