// union

struct
{
	UnionType* m_type;
}
union_specifier
	leave
	{
		if ($.m_type->getName().isEmpty())
			return declareUnnamedStructOrUnion($.m_type);
	}
	:	TokenKind_Dynamic $d?
		TokenKind_Union
		TokenKind_Identifier $n?
			{
				$.m_type = createUnionType(
					&$n ? $n.m_data.m_string : sl::String(),
					m_fieldAlignment,
					&$d ? TypeFlag_Dynamic : 0
					);

				if (!$.m_type)
					return false;
			}
		member_block<$.m_type>
	;

