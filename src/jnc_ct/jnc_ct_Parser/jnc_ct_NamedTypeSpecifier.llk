// struct

struct
{
	StructType* m_type;
}
struct_specifier
	leave
	{
		if ($.m_type->getName().isEmpty())
			return declareUnnamedStructOrUnion($.m_type);
	}
	:	TokenKind_Dynamic $d?
		TokenKind_Struct
		TokenKind_Identifier $n?
		(':' type_name_list $b)?
			{
				$.m_type = createStructType(
					&$n ? $n.m_data.m_string : sl::String(),
					&$b ? &$b.m_typeList : NULL,
					m_fieldAlignment,
					&$d ? TypeFlag_Dynamic : 0
					);

				if (!$.m_type)
					return false;
			}
		member_block<$.m_type>
	;

